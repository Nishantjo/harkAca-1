<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/chapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:layout_margin="5dp"
        app:layout_constraintHorizontal_chainStyle="packed" />
    <TextView
        android:id="@+id/chapter_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView2"

        android:layout_margin="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/chapter"
        app:layout_constraintTop_toBottomOf="@+id/chapter"

        app:layout_constraintRight_toRightOf="@+id/chapter" />

    <TextView
        android:id="@+id/chapter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView3"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintTop_toTopOf="@+id/chapter"
        app:layout_constraintBottom_toBottomOf="@id/chapter"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/chapter" />

    <TextView
        android:id="@+id/chapter_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView4"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintTop_toTopOf="@+id/chapter_no"
        app:layout_constraintBottom_toBottomOf="@id/chapter_no"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/chapter" />

</android.support.constraint.ConstraintLayout>